<%- include('./partials/head'); %>
    <div class="announcement">
        <h1>Welcome Customer</h1>
        <p>We're giving away free coupons</p>
        <p>as token of appreciation</p>
<% if(coupon.hide == false){ %>
        <p>for first <%= coupon.count %> customers(s)</p>
    </div>
    <form action="/process" method="POST">
        <p>Kindly type your name: </p>
        <input type="text" name="name">
        <input type="submit" value="Submit" id="submit">
    </form>
<% }else{ %>
    <% if(coupon.count > 0){ %>
        <div class="discount">
            <p>50% Discount</p>
            <p> <%= coupon.number %> </p>
            <div class="div-option">
                <form action="/reset" method="POST" class="btn-option">
                    <input type="submit" value="Reset count" id="reset">
                </form>
                <form action="/claim" method="POST" class="btn-option">
                    <input type="submit" value="Claim Again" id="claim">
                </form>
            </div>
        </div>
    <% }else{ %>
        <div class="discount">
            <p>Sorry!</p>
            <p> Unavailable </p>
            <div class="div-option">
                <form action="/reset" method="POST" class="btn-option">
                    <input type="submit" value="Reset count" id="reset">
                </form>
                <form action="/claim" method="POST" class="btn-option">
                    <input type="submit" value="Claim Again" id="claim">
                </form>
            </div>
        </div>
    <% } %>
<% } %>
<%- include('./partials/footer'); %>